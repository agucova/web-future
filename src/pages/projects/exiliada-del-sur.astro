        function updatePlaybackPosition(positionMs) {
            // Find current place based on position
            var newPlaceIndex = -1;
            for (var i = placeTimings.length - 1; i >= 0; i--) {
                if (positionMs >= placeTimings[i][0]) {
                    newPlaceIndex = i;
